  <div class="wrap">
    <div class="card">
      <span class="badge">üíû Quiz ultra romantique</span>
      <h1>Kass, veux‚Äëtu sortir avec moi&nbsp;?</h1>
      <p class="subtitle">Choisis ta r√©ponse (beaucoup de <span aria-hidden="true">üíñ</span> et quelques fleurs üå∏ t‚Äôattendent).
      </p><div class="grid" id="choices"></div>

  <div class="inputRow" id="freeInputRow">
    <input id="freeInput" placeholder="√âcris ton ‚Äòmais‚Ä¶‚Äô ou ‚Äòparce que‚Ä¶‚Äô ici ‚úçÔ∏è" />
  </div>

  <div class="actions">
    <button class="btn btn-primary" id="btnValider">Valider ma r√©ponse üíå</button>
    <button class="btn btn-secondary" id="btnCopier">Copier un lien de r√©ponse üîó</button>
  </div>

  <div class="result" id="result"></div>

  <div class="footer">Fait avec <span aria-hidden="true">‚ù§Ô∏è</span> et des fleurs. Tu peux publier ce fichier seul sur GitHub Pages.
  </div>
</div>

  </div>  <div class="modal" id="modal">
    <div class="modalCard">
      <h2>üåπ R√©ponse envoy√©e</h2>
      <p id="modalText"></p>
      <div class="actions">
        <button class="btn btn-primary" id="btnClose">Fermer</button>
        <button class="btn btn-secondary" id="btnCopyText">Copier le texte üí¨</button>
      </div>
    </div>
  </div>  <script>
    const OPTIONS = [
      { t:"Oui, √©videmment" },
      { t:"Oui, mais...", free:true, hint:"Qu‚Äôest‚Äëce qui te ferait dire oui √† 200%?" },
      { t:"Oui, parce que...", free:true, hint:"Compl√®te ta pens√©e ü•∞" },
      { t:"Oui, il √©tait temps que tu le demandes" },
      { t:"Oui, t‚Äôes mieux d‚Äô√™tre √† la hauteur" },
      { t:"Oui, sois coh√©rent pour la suite svp" },
      { t:"Oui, parce que t‚Äôes mieux que mon p√®re" },
      { t:"Oui, √† condition que tu me donnes minimum 1 orgasme par jour" },
      { t:"Oui, √† condition que tu r√®gles le probl√®me de mauvaise haleine de mon chien" },
      { t:"Oui, √† condition que tu restes sweet et qu√©taine pour toujours" },
      { t:"Oui, ma√Ætre" },
      { t:"Oui, mais seulement si je te fais toujours √† manger" }
    ];

    const choicesEl = document.getElementById('choices');
    const freeRow = document.getElementById('freeInputRow');
    const freeInput = document.getElementById('freeInput');
    const result = document.getElementById('result');
    const btnValider = document.getElementById('btnValider');
    const btnCopier = document.getElementById('btnCopier');
    const modal = document.getElementById('modal');
    const modalText = document.getElementById('modalText');
    const btnClose = document.getElementById('btnClose');
    const btnCopyText = document.getElementById('btnCopyText');

    let selected = null;

    function renderChoices(){
      choicesEl.innerHTML = '';
      OPTIONS.forEach((opt, idx)=>{
        const b = document.createElement('button');
        b.className = 'choice';
        b.type = 'button';
        b.setAttribute('data-index', idx);
        if(opt.free) b.setAttribute('data-free','1');
        b.innerHTML = `üíó ${opt.t} ${opt.hint?`<span class="small">${opt.hint}</span>`:''}`;
        b.addEventListener('click',()=>select(idx));
        choicesEl.appendChild(b);
      })
    }

    function select(idx){
      selected = idx;
      [...choicesEl.querySelectorAll('.choice')].forEach(el=>{
        el.style.outline = '2px solid #ff9ec2';
        el.style.boxShadow = '0 10px 24px rgba(255, 59, 111, .20)';
        el.style.transform = 'none';
        el.style.opacity = '.85';
      });
      const current = choicesEl.querySelector(`[data-index="${idx}"]`);
      current.style.outline = '3px solid var(--rouge)';
      current.style.opacity = '1';

      const opt = OPTIONS[idx];
      if(opt.free){
        freeRow.classList.add('active');
        freeInput.placeholder = opt.t.includes('mais')? 'Ex.: ‚Ä¶mais tu me dois un souper aux chandelles.' : 'Ex.: ‚Ä¶parce que tu me fais fondre.';
        freeInput.focus();
      } else {
        freeRow.classList.remove('active');
      }
      triggerHearts(10);
    }

    function buildAnswer(){
      if(selected===null){
        return {text:"Choisis une option d'abord üíû"};
      }
      const o = OPTIONS[selected];
      let text = o.t;
      if(o.free){
        const extra = (freeInput.value||'').trim();
        if(extra){
          text = o.t.replace('...', '') + ' ' + extra;
        }
      }
      return {text};
    }

    btnValider.addEventListener('click', ()=>{
      const {text} = buildAnswer();
      modalText.textContent = text;
      modal.style.display = 'grid';
      result.style.display='block';
      result.textContent = 'R√©ponse: ' + text;
      triggerHearts(24);
    });

    btnClose.addEventListener('click', ()=>{
      modal.style.display='none';
    });

    btnCopyText.addEventListener('click', ()=>{
      navigator.clipboard.writeText(modalText.textContent).then(()=>{
        btnCopyText.textContent = 'Copi√© ‚úÖ';
        setTimeout(()=>btnCopyText.textContent='Copier le texte üí¨', 1200);
      })
    });

    btnCopier.addEventListener('click', ()=>{
      const {text} = buildAnswer();
      const url = new URL(window.location.href);
      url.searchParams.set('reponse', encodeURIComponent(text));
      navigator.clipboard.writeText(url.toString())
        .then(()=>{
          btnCopier.textContent = 'Lien copi√© ‚úÖ';
          setTimeout(()=>btnCopier.textContent='Copier un lien de r√©ponse üîó', 1200);
        });
    });

    function triggerHearts(n=14){
      const sky = document.querySelector('.sky');
      for(let i=0;i<n;i++){
        const s = document.createElement('div');
        s.className='heart';
        s.style.left = Math.random()*100+'vw';
        s.style.bottom = (-10 + Math.random()*10)+'vh';
        s.style.fontSize = (12 + Math.random()*22)+'px';
        s.style.setProperty('--dur', (6+Math.random()*6)+'s');
        s.textContent = Math.random()>.2? 'üíñ' : (Math.random()>.5? 'üå∏':'üíó');
        sky.appendChild(s);
        setTimeout(()=>s.remove(), 8000);
      }
    }

    function initFromURL(){
      const qp = new URLSearchParams(location.search);
      const pre = qp.get('reponse');
      if(pre){
        const text = decodeURIComponent(pre);
        result.style.display='block';
        result.textContent='R√©ponse pr√©‚Äëremplie: ' + text;
      }
    }

    renderChoices();
    initFromURL();
    triggerHearts(20);
  </script></body>
